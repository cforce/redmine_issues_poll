<% if @project.users.empty? %>
	<p class="nodata">
	    <%= l(:label_no_data) %>
	</p>
<% else %>
	<table class="list">
	    <thead>
	        <tr>
	            <th>
	                <%= l(:label_user_login) %>
	            </th>
	            <th>
	                <%= l(:label_user_fullname) %>
	            </th>
	            <th>
	                <%= l(:label_field_hours) %>
	            </th>
	        </tr>
	    </thead>
	    <tbody>
	        <% @project.users.each do |user| %>
	        <tr class="<%= cycle 'odd', 'even' %>">
	            <td>
	                <%= user.login %>
	            </td>
	            <td>
	                <%= user.firstname + " " + user.lastname %>
	            </td>
	            <td>
	                <%= user.polls_hours_project(@project.id) %>
	            </td>
	        </tr>
	        <% end %>
	    </tbody>
	</table>
<% end %>